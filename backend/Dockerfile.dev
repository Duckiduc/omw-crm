# Development Dockerfile for Backend
FROM node:18-alpine

WORKDIR /app

# Install development dependencies
RUN npm install -g ts-node-dev

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install all dependencies (including dev)
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 3002

# Start with ts-node-dev for hot reload
CMD ["npm", "run", "dev"]